<div class="justify-content-center h-100 mx-10" style="border: 1px solid black">
    <div class="d-flex justify-content-center p-3">
        <h1><%= @task.title %></h1>
    </div>
    <br>
    <div class="d-flex justify-content-center p-3">
        <%= @task.details %>
    </div>
    <div class="d-flex justify-content-around p-3">
        <%= link_to "Edit this task", edit_path(@task)  %>
        <%= link_to "Delete this task", delete_path, method: :delete  %>
        <%= link_to "Back to Home", root_path  %>
    </div>
</div>


